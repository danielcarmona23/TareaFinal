<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Tarea_Movil.Vistas.Page_Registrar">
    <ContentPage.Content>
        <StackLayout Margin="5"
                     BackgroundColor="Gray">
            <Label Text="Registro de Contactos"
                   HorizontalOptions="CenterAndExpand"
                   BackgroundColor="WhiteSmoke"/>
            <Entry Placeholder="Introduce el nombre"
                   x:Name="txtNombre"/>
            <Entry Placeholder="Introduce los apellidos"
                   Keyboard="Text"
                   x:Name="txtApellidos"/>
            <Entry x:Name="txtedad" Placeholder="Ingrese su Edad" 
                   Keyboard="Numeric"></Entry>
            <Entry x:Name="txtdireccion" 
                    Placeholder="Ingrese su Direccion" />
            <Entry x:Name="txtpuesto" 
                   Placeholder="Ingrese su Puesto" 
                   Keyboard="Text"></Entry>

            <Button Text="Guardar"
                    x:Name="btnGuardar"
                    HorizontalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>